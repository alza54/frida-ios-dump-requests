{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": [
      "@types/node",
      "@types/frida-gum"
    ]
  },
  "include": [
    "src/**/*.ts"
  ]
}